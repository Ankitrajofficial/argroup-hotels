# Environment Variables Template
# Copy this file to .env and fill in your values

# MongoDB Connection String
# Get this from MongoDB Atlas: https://www.mongodb.com/atlas
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.xxxxx.mongodb.net/hotel-nayara?retryWrites=true&w=majority

# JWT Secret Key (use a long random string)
# You can generate one at: https://randomkeygen.com/
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=3000

# Node Environment
NODE_ENV=development

# Google OAuth Credentials (for Google Sign-In)
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
